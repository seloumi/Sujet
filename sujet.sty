%define sujetset command  ======================================
\newcommand\sujetset[2][]{%
	\setkeys{sujetkeys}{#1}
	\fancyhead{}% clear all header fields
	\renewcommand{\footrulewidth}{1pt}
	\renewcommand{\headrulewidth}{1pt}
	\chead{\sffamily \ifnum\thepage=1 \@school\hfill\ifGm@landscape\if@twocolumn\annee\hskip\columnsep\@school\fi\fi\hfill\annee\fi}
	\cfoot{\ifnum\ztotpages>1   \hfill  صفحة \thepage\ من \ztotpages \hfill  \ifGm@landscape صفحة \thepage\ من \ztotpages \hfill \fi\fi}
    \pagestyle{fancy}
	\if@correction
	\else
	\AtBeginDocument{\@head{#2}\name}
	\fi
}  

