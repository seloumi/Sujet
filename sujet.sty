%define sujetset command  ======================================
\newcommand\sujetset[2][]{%
	\setkeys{sujetkeys}{#1}
	\pagestyle{fancy}
	\fancyhead{}% clear all header fields
	\renewcommand{\footrulewidth}{1pt}
	\renewcommand{\headrulewidth}{1pt}
	\chead{\sffamily \ifnum\thepage=1 \lycee{}\hfill\iflscape\annee\hskip\columnsep\lycee{}\hfill\fi\annee\fi}
	\cfoot{\ifnum\ztotpages>1 \iflscape \hfill  صفحة \thepage\ من \ztotpages \hfill صفحة \thepage\ من \ztotpages \hfill\else  صفحة \thepage\ من \ztotpages\fi\fi}
	\long\gdef\head{\centerline{\sffamily\large  #2 }
	\rule{\linewidth}{1pt}
	\centerline{\sffamily المستوى: \niveau\   \hfill   \showduree}
	\nom}\head
}

